        <TextBlock Canvas.Left="348" TextWrapping="Wrap" Text="Price:" FontSize="22" TextAlignment="Left" Canvas.Top="285" Height="40" Width="253" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Visible"/>
